{% if cart.item_count > 0 %}
  <section>
    <h1 class="text-2xl font-bold text-center">Carrinho</h1>
    <form action="/cart" method="post" novalidate>
      <div class="flex flex-col md:flex-row max-w-[1080px] mx-auto px-4">
        <div class="flex-1">
          <div class="cart-items-container flex flex-col flex-1 gap-4 p-4">
            {% for item in cart.items %}
              {% render 'cart-drawer-item', item: item %}
            {% endfor %}
          </div>
        </div>
        <div class="w-full md:max-w-80 border border-orange-500 h-fit p-3">
          <div class="mb-5">
            <div class="flex justify-between border-b border-slate-400">
              <div>Subtotal</div>
              <div>{{ cart.items_subtotal_price | money }}</div>
            </div>
            <div class="flex justify-between border-b border-slate-400">
              <div>Descontos</div>
              <div>{{ cart.total_discount | money }}</div>
            </div>
            <div class="flex justify-between border-b border-slate-400">
              <div>Total Estimado</div>
              <div>{{ cart.total_price | money }}</div>
            </div>
          </div>

          <button class="w-full h-10 mb-4 bg-orange-500 text-white flex items-center justify-center" type="submit" name="checkout">Finalizar Compra</button>
          <a class="w-full h-10 border border-orange-500 flex items-center justify-center text-orange-500" href="{{ routes.root_url }}">Incluir mais produtos</a>
        </div>
      </div>
    </form>
  </section>
{% else %}
  <h2>cart</h2>
  Cart is empty
{% endif %}
