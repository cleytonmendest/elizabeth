<!-- /templates/customers/login.liquid -->

<div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">

    {%- comment -%} Header {%- endcomment -%}
    <div class="text-center">
      {%- if settings.logo -%}
        <a href="{{ routes.root_url }}" class="inline-block mb-6">
          <img
            src="{{ settings.logo | image_url: width: 120 }}"
            alt="{{ shop.name }}"
            width="120"
            height="auto"
            class="mx-auto"
            loading="eager"
          >
        </a>
      {%- endif -%}

      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        {%- if recover_success == true -%}
          Verifique seu email
        {%- else -%}
          Bem-vindo de volta
        {%- endif -%}
      </h1>

      <p class="text-sm text-gray-600">
        {%- if recover_success == true -%}
          Enviamos um link de recuperação para seu email
        {%- else -%}
          Entre com sua conta para continuar
        {%- endif -%}
      </p>
    </div>

    {%- comment -%} Success Message {%- endcomment -%}
    {%- if reset_success == true -%}
      <div class="bg-green-50 border border-green-200 rounded-lg p-4" role="alert">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <p class="text-sm text-green-800">
            Senha redefinida com sucesso! Faça login com sua nova senha.
          </p>
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Login Form {%- endcomment -%}
    <div id="login-form" class="bg-white shadow-lg rounded-lg p-8 space-y-6">

      {%- form 'customer_login', novalidate: 'novalidate', class: 'space-y-6' -%}

        {%- comment -%} Error Messages {%- endcomment -%}
        {%- if form.errors -%}
          <div class="bg-red-50 border border-red-200 rounded-lg p-4" role="alert">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="text-sm text-red-800">
                <p class="font-medium mb-1">Erro ao fazer login:</p>
                {{ form.errors | default_errors }}
              </div>
            </div>
          </div>
        {%- endif -%}

        {%- comment -%} Email Field {%- endcomment -%}
        <div>
          <label for="customer_email" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <input
            type="email"
            name="customer[email]"
            id="customer_email"
            autocomplete="email"
            required
            aria-required="true"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
            placeholder="seu@email.com"
            {%- if form.email -%}
              value="{{ form.email }}"
            {%- endif -%}
          >
        </div>

        {%- comment -%} Password Field {%- endcomment -%}
        <div>
          <label for="customer_password" class="block text-sm font-medium text-gray-700 mb-2">
            Senha
          </label>
          <input
            type="password"
            name="customer[password]"
            id="customer_password"
            autocomplete="current-password"
            required
            aria-required="true"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
            placeholder="••••••••"
          >
        </div>

        {%- comment -%} Forgot Password Link {%- endcomment -%}
        <div class="flex items-center justify-end">
          <button
            type="button"
            id="recover-password-link"
            class="text-sm font-medium text-gray-900 hover:text-gray-700 transition-colors"
          >
            Esqueceu sua senha?
          </button>
        </div>

        {%- comment -%} Submit Button {%- endcomment -%}
        <button
          type="submit"
          class="w-full bg-gray-900 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
        >
          Entrar
        </button>

      {%- endform -%}

      {%- comment -%} Register Link {%- endcomment -%}
      <div class="text-center pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          Não tem uma conta?
          <a
            href="{{ routes.account_register_url }}"
            class="font-medium text-gray-900 hover:text-gray-700 transition-colors ml-1"
          >
            Criar conta
          </a>
        </p>
      </div>
    </div>

    {%- comment -%} Recover Password Form {%- endcomment -%}
    <div id="recover-password-form" class="bg-white shadow-lg rounded-lg p-8 space-y-6 hidden">

      {%- form 'recover_customer_password', novalidate: 'novalidate', class: 'space-y-6' -%}

        {%- comment -%} Instructions {%- endcomment -%}
        <div class="text-center">
          <h2 class="text-2xl font-bold text-gray-900 mb-2">
            Recuperar senha
          </h2>
          <p class="text-sm text-gray-600">
            Digite seu email e enviaremos um link para redefinir sua senha
          </p>
        </div>

        {%- comment -%} Error Messages {%- endcomment -%}
        {%- if form.errors -%}
          <div class="bg-red-50 border border-red-200 rounded-lg p-4" role="alert">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="text-sm text-red-800">
                {{ form.errors | default_errors }}
              </div>
            </div>
          </div>
        {%- endif -%}

        {%- comment -%} Email Field {%- endcomment -%}
        <div>
          <label for="recover_email" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <input
            type="email"
            name="email"
            id="recover_email"
            autocomplete="email"
            required
            aria-required="true"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
            placeholder="seu@email.com"
          >
        </div>

        {%- comment -%} Submit Button {%- endcomment -%}
        <button
          type="submit"
          class="w-full bg-gray-900 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"
        >
          Enviar link de recuperação
        </button>

        {%- comment -%} Back to Login {%- endcomment -%}
        <button
          type="button"
          id="back-to-login-link"
          class="w-full text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors"
        >
          ← Voltar para login
        </button>

      {%- endform -%}
    </div>

    {%- comment -%} Back to Store {%- endcomment -%}
    <div class="text-center">
      <a
        href="{{ routes.root_url }}"
        class="text-sm text-gray-600 hover:text-gray-900 transition-colors inline-flex items-center"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar para a loja
      </a>
    </div>

  </div>
</div>

{%- comment -%} Toggle Script {%- endcomment -%}
<script>
  (function() {
    const loginForm = document.getElementById('login-form');
    const recoverForm = document.getElementById('recover-password-form');
    const recoverLink = document.getElementById('recover-password-link');
    const backToLoginLink = document.getElementById('back-to-login-link');

    {%- comment -%} Show recover form if there are errors or if recover_success {%- endcomment -%}
    {%- if recover_success or form.errors -%}
      {%- assign form_id = form.id | default: '' -%}
      {%- if form_id == 'recover_customer_password' -%}
        if (loginForm && recoverForm) {
          loginForm.classList.add('hidden');
          recoverForm.classList.remove('hidden');
        }
      {%- endif -%}
    {%- endif -%}

    if (recoverLink) {
      recoverLink.addEventListener('click', function(e) {
        e.preventDefault();
        if (loginForm && recoverForm) {
          loginForm.classList.add('hidden');
          recoverForm.classList.remove('hidden');
          document.getElementById('recover_email')?.focus();
        }
      });
    }

    if (backToLoginLink) {
      backToLoginLink.addEventListener('click', function(e) {
        e.preventDefault();
        if (loginForm && recoverForm) {
          recoverForm.classList.add('hidden');
          loginForm.classList.remove('hidden');
          document.getElementById('customer_email')?.focus();
        }
      });
    }

    {%- comment -%} Form validation enhancement {%- endcomment -%}
    const forms = document.querySelectorAll('form');
    forms.forEach(function(form) {
      const inputs = form.querySelectorAll('input[required]');

      inputs.forEach(function(input) {
        input.addEventListener('invalid', function(e) {
          e.preventDefault();
          input.classList.add('border-red-500', 'focus:ring-red-500');
        });

        input.addEventListener('input', function() {
          if (input.validity.valid) {
            input.classList.remove('border-red-500', 'focus:ring-red-500');
          }
        });
      });
    });
  })();
</script>

<style>
  {%- comment -%} Additional styles for smooth transitions {%- endcomment -%}
  #login-form,
  #recover-password-form {
    transition: opacity 0.3s ease-in-out;
  }

  #login-form.hidden,
  #recover-password-form.hidden {
    display: none;
  }

  {%- comment -%} Error list styling {%- endcomment -%}
  .errors ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .errors li {
    margin-bottom: 0.25rem;
  }

  .errors li:last-child {
    margin-bottom: 0;
  }
</style>
