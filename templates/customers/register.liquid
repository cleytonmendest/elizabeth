<!-- /templates/customers/register.liquid -->

<div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">

    {%- comment -%} Header {%- endcomment -%}
    <div class="text-center">
      {%- if settings.logo -%}
        <a href="{{ routes.root_url }}" class="inline-block mb-6">
          <img
            src="{{ settings.logo | image_url: width: 120 }}"
            alt="{{ shop.name }}"
            width="120"
            height="auto"
            class="mx-auto"
            loading="eager"
          >
        </a>
      {%- endif -%}

      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Criar uma conta
      </h1>

      <p class="text-sm text-gray-600">
        Preencha os campos abaixo para começar
      </p>
    </div>

    {%- comment -%} Registration Form {%- endcomment -%}
    <div class="bg-white shadow-lg rounded-lg p-8">

      {%- form 'create_customer', novalidate: 'novalidate', class: 'space-y-6' -%}

        {%- comment -%} Error Messages {%- endcomment -%}
        {%- if form.errors -%}
          <div class="bg-red-50 border border-red-200 rounded-lg p-4" role="alert">
            <div class="flex items-start">
              <svg class="w-5 h-5 text-red-500 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="text-sm text-red-800">
                <p class="font-medium mb-1">Por favor, corrija os seguintes erros:</p>
                {{ form.errors | default_errors }}
              </div>
            </div>
          </div>
        {%- endif -%}

        {%- comment -%} Name Fields {%- endcomment -%}
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          <div>
            <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">
              Nome <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              name="customer[first_name]"
              id="first_name"
              autocomplete="given-name"
              required
              aria-required="true"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
              placeholder="João"
              {%- if form.first_name -%}
                value="{{ form.first_name }}"
              {%- endif -%}
            >
          </div>

          <div>
            <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">
              Sobrenome <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              name="customer[last_name]"
              id="last_name"
              autocomplete="family-name"
              required
              aria-required="true"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
              placeholder="Silva"
              {%- if form.last_name -%}
                value="{{ form.last_name }}"
              {%- endif -%}
            >
          </div>
        </div>

        {%- comment -%} Email Field {%- endcomment -%}
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email <span class="text-red-500">*</span>
          </label>
          <input
            type="email"
            name="customer[email]"
            id="email"
            autocomplete="email"
            required
            aria-required="true"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
            placeholder="seu@email.com"
            {%- if form.email -%}
              value="{{ form.email }}"
            {%- endif -%}
          >
          <p class="mt-1 text-xs text-gray-500">
            Usaremos este email para suas comunicações
          </p>
        </div>

        {%- comment -%} Password Field {%- endcomment -%}
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
            Senha <span class="text-red-500">*</span>
          </label>
          <div class="relative">
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="new-password"
              required
              aria-required="true"
              minlength="5"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-900 focus:border-transparent transition-all outline-none"
              placeholder="••••••••"
            >
            <button
              type="button"
              id="toggle-password"
              class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-600 transition-colors"
              aria-label="Mostrar/ocultar senha"
            >
              <svg id="eye-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <svg id="eye-off-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
              </svg>
            </button>
          </div>

          {%- comment -%} Password Strength Indicator {%- endcomment -%}
          <div id="password-strength" class="mt-2 hidden">
            <div class="flex items-center space-x-2">
              <div class="flex-1 h-1.5 bg-gray-200 rounded-full overflow-hidden">
                <div id="strength-bar" class="h-full transition-all duration-300 rounded-full"></div>
              </div>
              <span id="strength-text" class="text-xs font-medium"></span>
            </div>
            <p id="strength-hint" class="mt-1 text-xs text-gray-500"></p>
          </div>

          <p class="mt-1 text-xs text-gray-500">
            Mínimo de 5 caracteres
          </p>
        </div>

        {%- comment -%} Marketing Acceptance {%- endcomment -%}
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <input
              type="checkbox"
              name="customer[accepts_marketing]"
              id="accepts_marketing"
              class="w-4 h-4 border-gray-300 rounded text-gray-900 focus:ring-gray-900"
            >
          </div>
          <div class="ml-3">
            <label for="accepts_marketing" class="text-sm text-gray-700">
              Quero receber novidades, ofertas exclusivas e promoções por email
            </label>
          </div>
        </div>

        {%- comment -%} Terms Acceptance {%- endcomment -%}
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <input
              type="checkbox"
              id="terms_acceptance"
              required
              aria-required="true"
              class="w-4 h-4 border-gray-300 rounded text-gray-900 focus:ring-gray-900"
            >
          </div>
          <div class="ml-3">
            <label for="terms_acceptance" class="text-sm text-gray-700">
              Concordo com os
              <a href="{{ pages.termos-de-uso.url | default: '/pages/terms' }}" target="_blank" class="font-medium text-gray-900 hover:text-gray-700 underline">
                Termos de Uso
              </a>
              e
              <a href="{{ pages.politica-de-privacidade.url | default: '/pages/privacy' }}" target="_blank" class="font-medium text-gray-900 hover:text-gray-700 underline">
                Política de Privacidade
              </a>
              <span class="text-red-500">*</span>
            </label>
          </div>
        </div>

        {%- comment -%} Submit Button {%- endcomment -%}
        <button
          type="submit"
          class="w-full bg-gray-900 text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 disabled:opacity-50 disabled:cursor-not-allowed"
        >
          Criar minha conta
        </button>

      {%- endform -%}

      {%- comment -%} Login Link {%- endcomment -%}
      <div class="text-center pt-6 mt-6 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          Já tem uma conta?
          <a
            href="{{ routes.account_login_url }}"
            class="font-medium text-gray-900 hover:text-gray-700 transition-colors ml-1"
          >
            Fazer login
          </a>
        </p>
      </div>
    </div>

    {%- comment -%} Back to Store {%- endcomment -%}
    <div class="text-center">
      <a
        href="{{ routes.root_url }}"
        class="text-sm text-gray-600 hover:text-gray-900 transition-colors inline-flex items-center"
      >
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Voltar para a loja
      </a>
    </div>

  </div>
</div>

{%- comment -%} Password Toggle & Validation Script {%- endcomment -%}
<script>
  (function() {
    const passwordInput = document.getElementById('password');
    const toggleButton = document.getElementById('toggle-password');
    const eyeIcon = document.getElementById('eye-icon');
    const eyeOffIcon = document.getElementById('eye-off-icon');
    const strengthContainer = document.getElementById('password-strength');
    const strengthBar = document.getElementById('strength-bar');
    const strengthText = document.getElementById('strength-text');
    const strengthHint = document.getElementById('strength-hint');
    const termsCheckbox = document.getElementById('terms_acceptance');
    const form = document.querySelector('form');
    const submitButton = form.querySelector('button[type="submit"]');

    {%- comment -%} Toggle Password Visibility {%- endcomment -%}
    if (toggleButton && passwordInput) {
      toggleButton.addEventListener('click', function() {
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;

        if (type === 'password') {
          eyeIcon.classList.remove('hidden');
          eyeOffIcon.classList.add('hidden');
        } else {
          eyeIcon.classList.add('hidden');
          eyeOffIcon.classList.remove('hidden');
        }
      });
    }

    {%- comment -%} Password Strength Checker {%- endcomment -%}
    if (passwordInput && strengthContainer) {
      passwordInput.addEventListener('input', function() {
        const password = passwordInput.value;

        if (password.length === 0) {
          strengthContainer.classList.add('hidden');
          return;
        }

        strengthContainer.classList.remove('hidden');

        let strength = 0;
        let hints = [];

        // Length check
        if (password.length >= 8) strength++;
        else hints.push('mínimo 8 caracteres');

        // Lowercase check
        if (/[a-z]/.test(password)) strength++;
        else hints.push('letras minúsculas');

        // Uppercase check
        if (/[A-Z]/.test(password)) strength++;
        else hints.push('letras maiúsculas');

        // Number check
        if (/\d/.test(password)) strength++;
        else hints.push('números');

        // Special character check
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        else hints.push('caracteres especiais');

        // Update strength bar and text
        const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500', 'bg-green-600'];
        const labels = ['Muito fraca', 'Fraca', 'Média', 'Boa', 'Muito boa'];
        const textColors = ['text-red-600', 'text-orange-600', 'text-yellow-600', 'text-green-600', 'text-green-700'];

        strengthBar.className = 'h-full transition-all duration-300 rounded-full ' + colors[strength - 1];
        strengthBar.style.width = (strength * 20) + '%';
        strengthText.className = 'text-xs font-medium ' + textColors[strength - 1];
        strengthText.textContent = labels[strength - 1];

        if (hints.length > 0 && strength < 4) {
          strengthHint.textContent = 'Adicione: ' + hints.join(', ');
        } else {
          strengthHint.textContent = 'Senha forte!';
        }
      });
    }

    {%- comment -%} Form Validation {%- endcomment -%}
    if (form) {
      const inputs = form.querySelectorAll('input[required]');

      inputs.forEach(function(input) {
        input.addEventListener('invalid', function(e) {
          e.preventDefault();
          input.classList.add('border-red-500', 'focus:ring-red-500');

          // Show custom error message
          const label = input.previousElementSibling;
          if (label && label.tagName === 'LABEL') {
            let errorMsg = label.querySelector('.error-message');
            if (!errorMsg) {
              errorMsg = document.createElement('span');
              errorMsg.className = 'error-message text-xs text-red-600 ml-1';
              label.appendChild(errorMsg);
            }
            errorMsg.textContent = '- Campo obrigatório';
          }
        });

        input.addEventListener('input', function() {
          if (input.validity.valid) {
            input.classList.remove('border-red-500', 'focus:ring-red-500');

            // Remove error message
            const label = input.previousElementSibling;
            if (label && label.tagName === 'LABEL') {
              const errorMsg = label.querySelector('.error-message');
              if (errorMsg) {
                errorMsg.remove();
              }
            }
          }
        });
      });

      // Terms checkbox validation
      if (termsCheckbox) {
        form.addEventListener('submit', function(e) {
          if (!termsCheckbox.checked) {
            e.preventDefault();
            termsCheckbox.focus();

            // Show error message
            const container = termsCheckbox.closest('div').parentElement;
            let errorDiv = container.querySelector('.terms-error');

            if (!errorDiv) {
              errorDiv = document.createElement('div');
              errorDiv.className = 'terms-error text-xs text-red-600 mt-1 ml-7';
              errorDiv.textContent = 'Você deve aceitar os termos para continuar';
              container.appendChild(errorDiv);
            }
          }
        });

        termsCheckbox.addEventListener('change', function() {
          if (termsCheckbox.checked) {
            const container = termsCheckbox.closest('div').parentElement;
            const errorDiv = container.querySelector('.terms-error');
            if (errorDiv) {
              errorDiv.remove();
            }
          }
        });
      }
    }
  })();
</script>

<style>
  {%- comment -%} Error list styling {%- endcomment -%}
  .errors ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .errors li {
    margin-bottom: 0.25rem;
  }

  .errors li:last-child {
    margin-bottom: 0;
  }

  {%- comment -%} Custom checkbox styling {%- endcomment -%}
  input[type="checkbox"]:checked {
    background-color: rgb(17, 24, 39);
    border-color: rgb(17, 24, 39);
  }

  input[type="checkbox"]:focus {
    outline: 2px solid transparent;
    outline-offset: 2px;
    box-shadow: 0 0 0 2px white, 0 0 0 4px rgb(17, 24, 39);
  }
</style>
