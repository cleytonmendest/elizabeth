<!-- /templates/customers/account.liquid -->

<div class="py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">

    {%- comment -%} Header {%- endcomment -%}
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        Minha Conta
      </h1>
      <p class="text-sm text-gray-600">
        Olá, {{ customer.first_name }}! Gerencie suas informações e pedidos.
      </p>
    </div>

    {%- comment -%} Main Grid {%- endcomment -%}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">

      {%- comment -%} Welcome Card {%- endcomment -%}
      <div class="bg-white rounded-lg shadow-lg p-6 lg:col-span-2">
        <div class="flex items-start justify-between mb-6">
          <div>
            <h2 class="text-xl font-bold text-gray-900 mb-1">
              Bem-vindo de volta!
            </h2>
            <p class="text-sm text-gray-600">
              {{ customer.email }}
            </p>
          </div>
          <a
            href="{{ routes.account_logout_url }}"
            class="text-sm text-gray-600 hover:text-gray-900 transition-colors inline-flex items-center"
          >
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
            </svg>
            Sair
          </a>
        </div>

        {%- comment -%} Quick Stats {%- endcomment -%}
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-xs text-gray-600 mb-1">Total de Pedidos</p>
            <p class="text-2xl font-bold text-gray-900">{{ customer.orders_count }}</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-4">
            <p class="text-xs text-gray-600 mb-1">Endereços Salvos</p>
            <p class="text-2xl font-bold text-gray-900">{{ customer.addresses_count }}</p>
          </div>
          <div class="bg-gray-50 rounded-lg p-4 sm:col-span-1 col-span-2">
            <p class="text-xs text-gray-600 mb-1">Cliente desde</p>
            <p class="text-lg font-bold text-gray-900">{{ customer.created_at | date: "%Y" }}</p>
          </div>
        </div>
      </div>

      {%- comment -%} Quick Actions Card {%- endcomment -%}
      <div class="bg-white rounded-lg shadow-lg p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4">Ações Rápidas</h3>
        <div class="space-y-3">
          <a
            href="{{ routes.account_addresses_url }}"
            class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group"
          >
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-sm font-medium text-gray-900">Gerenciar Endereços</span>
            </div>
            <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>

          <a
            href="{{ routes.root_url }}"
            class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors group"
          >
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
              <span class="text-sm font-medium text-gray-900">Continuar Comprando</span>
            </div>
            <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    {%- comment -%} Default Address {%- endcomment -%}
    {%- if customer.default_address -%}
      <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900">Endereço Padrão</h3>
          <a
            href="{{ routes.account_addresses_url }}"
            class="text-sm text-gray-900 hover:text-gray-700 font-medium transition-colors"
          >
            Editar
          </a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="flex items-start">
            <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div class="text-sm text-gray-700">
              <p class="font-medium text-gray-900 mb-1">
                {{ customer.default_address.first_name }} {{ customer.default_address.last_name }}
              </p>
              <p>{{ customer.default_address.address1 }}</p>
              {%- if customer.default_address.address2 != blank -%}
                <p>{{ customer.default_address.address2 }}</p>
              {%- endif -%}
              <p>
                {{ customer.default_address.city }}{%- if customer.default_address.province_code -%}, {{ customer.default_address.province_code }}{%- endif -%}
              </p>
              <p>{{ customer.default_address.zip }}</p>
              <p>{{ customer.default_address.country }}</p>
            </div>
          </div>
          {%- if customer.default_address.phone -%}
            <div class="flex items-start">
              <svg class="w-5 h-5 text-gray-400 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <div class="text-sm text-gray-700">
                <p class="font-medium text-gray-900 mb-1">Telefone</p>
                <p>{{ customer.default_address.phone }}</p>
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Orders Section {%- endcomment -%}
    <div class="bg-white rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg font-bold text-gray-900">Pedidos Recentes</h3>
        {%- if customer.orders_count > 5 -%}
          <p class="text-sm text-gray-600">
            Mostrando {{ customer.orders | size | at_most: 5 }} de {{ customer.orders_count }} pedidos
          </p>
        {%- endif -%}
      </div>

      {%- paginate customer.orders by 5 -%}
        {%- if customer.orders.size > 0 -%}
          <div class="space-y-4">
            {%- for order in customer.orders -%}
              <div class="border border-gray-200 rounded-lg p-4 hover:border-gray-300 transition-colors">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
                  <div class="mb-2 sm:mb-0">
                    <a
                      href="{{ order.customer_url }}"
                      class="text-sm font-bold text-gray-900 hover:text-gray-700 transition-colors"
                    >
                      Pedido #{{ order.name }}
                    </a>
                    <p class="text-xs text-gray-600 mt-1">
                      {{ order.created_at | date: "%d/%m/%Y às %H:%M" }}
                    </p>
                  </div>
                  <div class="flex items-center space-x-3">
                    {%- case order.financial_status -%}
                      {%- when 'pending' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Pagamento Pendente
                        </span>
                      {%- when 'authorized' or 'paid' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Pago
                        </span>
                      {%- when 'refunded' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Reembolsado
                        </span>
                      {%- else -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          {{ order.financial_status }}
                        </span>
                    {%- endcase -%}

                    {%- case order.fulfillment_status -%}
                      {%- when 'fulfilled' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          Enviado
                        </span>
                      {%- when 'partial' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Parcialmente Enviado
                        </span>
                      {%- when 'unfulfilled' -%}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                          Não Enviado
                        </span>
                      {%- else -%}
                        {%- if order.fulfillment_status -%}
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            {{ order.fulfillment_status }}
                          </span>
                        {%- endif -%}
                    {%- endcase -%}
                  </div>
                </div>

                <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                  <div>
                    <p class="text-xs text-gray-600 mb-1">
                      {{ order.line_items | size }}
                      {%- if order.line_items.size == 1 -%}
                        item
                      {%- else -%}
                        itens
                      {%- endif -%}
                    </p>
                    <p class="text-sm font-bold text-gray-900">
                      {{ order.total_price | money }}
                    </p>
                  </div>
                  <a
                    href="{{ order.customer_url }}"
                    class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-900 bg-white hover:bg-gray-50 transition-colors"
                  >
                    Ver Detalhes
                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            {%- endfor -%}
          </div>

          {%- if paginate.pages > 1 -%}
            <div class="mt-6 flex items-center justify-center">
              {%- render 'pagination', paginate: paginate -%}
            </div>
          {%- endif -%}

        {%- else -%}
          {%- comment -%} Empty State {%- endcomment -%}
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhum pedido ainda</h3>
            <p class="mt-1 text-sm text-gray-500">
              Comece a explorar nossos produtos e faça seu primeiro pedido!
            </p>
            <div class="mt-6">
              <a
                href="{{ routes.all_products_collection_url }}"
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900 transition-colors"
              >
                <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
                Explorar Produtos
              </a>
            </div>
          </div>
        {%- endif -%}
      {%- endpaginate -%}
    </div>

  </div>
</div>

{%- comment -%} Simple Pagination Snippet (if doesn't exist) {%- endcomment -%}
{%- unless paginate == nil -%}
  <style>
    .pagination {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .pagination a,
    .pagination span {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      min-width: 2.5rem;
      height: 2.5rem;
      padding: 0 0.75rem;
      border: 1px solid #d1d5db;
      border-radius: 0.5rem;
      font-size: 0.875rem;
      font-weight: 500;
      color: #111827;
      background-color: white;
      transition: all 0.2s;
    }

    .pagination a:hover {
      background-color: #f9fafb;
      border-color: #9ca3af;
    }

    .pagination .current {
      background-color: #111827;
      color: white;
      border-color: #111827;
    }

    .pagination .disabled {
      opacity: 0.5;
      cursor: not-allowed;
      pointer-events: none;
    }
  </style>
{%- endunless -%}
