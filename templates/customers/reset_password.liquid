{%- comment -%} Password Toggle & Validation Script {%- endcomment -%}
<script>
  (function() {
    const passwordInput = document.getElementById('password');
    const confirmationInput = document.getElementById('password_confirmation');
    const togglePassword = document.getElementById('toggle-password');
    const toggleConfirmation = document.getElementById('toggle-confirmation');
    const eyeIcon = document.getElementById('eye-icon');
    const eyeOffIcon = document.getElementById('eye-off-icon');
    const eyeIconConfirm = document.getElementById('eye-icon-confirm');
    const eyeOffIconConfirm = document.getElementById('eye-off-icon-confirm');
    const strengthContainer = document.getElementById('password-strength');
    const strengthBar = document.getElementById('strength-bar');
    const strengthText = document.getElementById('strength-text');
    const strengthHint = document.getElementById('strength-hint');
    const matchContainer = document.getElementById('password-match');
    const matchIcon = document.getElementById('match-icon');
    const matchText = document.getElementById('match-text');
    const form = document.querySelector('form');

    {%- comment -%} Toggle Password Visibility {%- endcomment -%}
    if (togglePassword && passwordInput) {
      togglePassword.addEventListener('click', function() {
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;

        if (type === 'password') {
          eyeIcon.classList.remove('hidden');
          eyeOffIcon.classList.add('hidden');
        } else {
          eyeIcon.classList.add('hidden');
          eyeOffIcon.classList.remove('hidden');
        }
      });
    }

    if (toggleConfirmation && confirmationInput) {
      toggleConfirmation.addEventListener('click', function() {
        const type = confirmationInput.type === 'password' ? 'text' : 'password';
        confirmationInput.type = type;

        if (type === 'password') {
          eyeIconConfirm.classList.remove('hidden');
          eyeOffIconConfirm.classList.add('hidden');
        } else {
          eyeIconConfirm.classList.add('hidden');
          eyeOffIconConfirm.classList.remove('hidden');
        }
      });
    }

    {%- comment -%} Password Strength Checker {%- endcomment -%}
    if (passwordInput && strengthContainer) {
      passwordInput.addEventListener('input', function() {
        const password = passwordInput.value;

        if (password.length === 0) {
          strengthContainer.classList.add('hidden');
          checkPasswordMatch();
          return;
        }

        strengthContainer.classList.remove('hidden');

        let strength = 0;
        let hints = [];

        // Length check
        if (password.length >= 8) strength++;
        else hints.push('m√≠nimo 8 caracteres');

        // Lowercase check
        if (/[a-z]/.test(password)) strength++;
        else hints.push('letras min√∫sculas');

        // Uppercase check
        if (/[A-Z]/.test(password)) strength++;
        else hints.push('letras MAI√öSCULAS');

        // Number check
        if (/\d/.test(password)) strength++;
        else hints.push('n√∫meros');

        // Special character check
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        else hints.push('s√≠mbolos');

        // Update strength bar and text
        const colors = ['bg-red-500', 'bg-orange-500', 'bg-yellow-500', 'bg-green-500', 'bg-green-600'];
        const labels = ['Muito fraca', 'Fraca', 'M√©dia', 'Boa', 'Muito boa'];
        const textColors = ['text-red-600', 'text-orange-600', 'text-yellow-600', 'text-green-600', 'text-green-700'];

        strengthBar.className = 'h-full transition-all duration-300 rounded-full ' + colors[strength - 1];
        strengthBar.style.width = (strength * 20) + '%';
        strengthText.className = 'text-xs font-medium whitespace-nowrap ' + textColors[strength - 1];
        strengthText.textContent = labels[strength - 1];

        if (hints.length > 0 && strength < 4) {
          strengthHint.textContent = 'Adicione: ' + hints.join(', ');
        } else {
          strengthHint.textContent = 'Senha forte! üéâ';
        }

        checkPasswordMatch();
      });
    }

    {%- comment -%} Password Match Checker {%- endcomment -%}
    function checkPasswordMatch() {
      if (!confirmationInput || !matchContainer) return;

      const password = passwordInput.value;
      const confirmation = confirmationInput.value;

      if (confirmation.length === 0) {
        matchContainer.classList.add('hidden');
        confirmationInput.classList.remove('border-green-500', 'border-red-500', 'focus:ring-green-500', 'focus:ring-red-500');
        return;
      }

      matchContainer.classList.remove('hidden');

      if (password === confirmation && password.length >= 5) {
        // Match
        matchContainer.className = 'mt-2 text-green-600';
        matchIcon.classList.remove('hidden');
        matchText.textContent = 'As senhas coincidem ‚úì';
        confirmationInput.classList.remove('border-red-500', 'focus:ring-red-500');
        confirmationInput.classList.add('border-green-500', 'focus:ring-green-500');
      } else {
        // No match
        matchContainer.className = 'mt-2 text-red-600';
        matchIcon.classList.add('hidden');
        matchText.textContent = 'As senhas n√£o coincidem';
        confirmationInput.classList.remove('border-green-500', 'focus:ring-green-500');
        confirmationInput.classList.add('border-red-500', 'focus:ring-red-500');
      }
    }

    if (confirmationInput) {
      confirmationInput.addEventListener('input', checkPasswordMatch);
    }

    {%- comment -%} Form Validation {%- endcomment -%}
    if (form) {
      form.addEventListener('submit', function(e) {
        const password = passwordInput.value;
        const confirmation = confirmationInput.value;

        // Check if passwords match
        if (password !== confirmation) {
          e.preventDefault();
          confirmationInput.focus();

          // Show error if not already visible
          if (matchContainer.classList.contains('hidden')) {
            checkPasswordMatch();
          }

          return false;
        }

        // Check minimum length
        if (password.length < 5) {
          e.preventDefault();
          passwordInput.focus();
          passwordInput.classList.add('border-red-500', 'focus:ring-red-500');
          return false;
        }
      });

      const inputs = form.querySelectorAll('input[required]');
      inputs.forEach(function(input) {
        input.addEventListener('invalid', function(e) {
          e.preventDefault();
          input.classList.add('border-red-500', 'focus:ring-red-500');
        });

        input.addEventListener('input', function() {
          if (input.validity.valid) {
            input.classList.remove('border-red-500', 'focus:ring-red-500');
          }
        });
      });
    }
  })();
</script>

