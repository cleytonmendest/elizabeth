[
  {
    "name": "theme_info",
    "theme_name": "Elizabeth",
    "theme_version": "1.0.0",
    "theme_author": "Cleyton Mendes",
    "theme_documentation_url": "https://github.com/Shopify/themekit",
    "theme_support_url": "https://github.com/Shopify/themekit/issues"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Principal"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "Largura máxima da Logo (Header)"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Imagem que exibirá na Tab do navegador"
      },
      {
        "type": "textarea",
        "id": "logo_svg",
        "label": "Logo SVG (Header)",
        "info": "Caso incluído, utilizará o svg inserido desconsiderando campo 'Logo principal'. Melhor para alterações de cores"
      }
    ]
  },
  {
    "name": "Parcelamento (somente visual)",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_installments",
        "label": "Exibe informações de parcelamentos nos produtos?",
        "info": "Caso desativado, não exibirá nenhuma informação de parcelamento. Nem nas prateleiras nem na Página de Produto",
        "default": true
      },
      {
        "type": "number",
        "label": "Quantidade máxima de parcelamento",
        "info": "Quantidade máxima de parcelas que a loja consegue, ex: 10. Isto quer dizer que pode parcelar até em 10x",
        "default": 10,
        "id": "max_installments"
      },
      {
        "type": "number",
        "label": "Valor mínimo de parcelas",
        "info": "Valor mínimo por parcela, ex: 100. Se colocar o valor 100 só vai exibir o parcelamento no produto se o valor do produto for no minimo 200, fazendo R$200,00 em 2x = R$100,00 por parcela",
        "id": "min_value_installment",
        "default": 50
      }
    ]
  },
  {
    "name": "Cores",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure esquemas de cores reutilizáveis. Cada seção pode escolher qual esquema usar."
      },
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "Fundo",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "Gradiente de fundo",
            "info": "Sobrepõe a cor de fundo se definido"
          },
          {
            "type": "color",
            "id": "text",
            "label": "Texto",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "Botão primário",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "Texto do botão primário",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "Texto do botão secundário",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "border",
            "label": "Bordas",
            "default": "#E5E7EB"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "Sombras",
            "default": "#121212"
          },
          {
            "type": "header",
            "content": "Badges e Destaques"
          },
          {
            "type": "color",
            "id": "badge_background",
            "label": "Fundo de badge",
            "default": "#DC2626"
          },
          {
            "type": "color",
            "id": "badge_text",
            "label": "Texto de badge",
            "default": "#FFFFFF"
          },
          {
            "type": "header",
            "content": "Feedback"
          },
          {
            "type": "color",
            "id": "success",
            "label": "Sucesso",
            "default": "#059669"
          },
          {
            "type": "color",
            "id": "error",
            "label": "Erro",
            "default": "#DC2626"
          },
          {
            "type": "color",
            "id": "warning",
            "label": "Alerta",
            "default": "#F59E0B"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "border"
        }
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1400,
        "max": 2560,
        "step": 20,
        "default": 1920,
        "unit": "px",
        "label": "Largura máxima da Loja"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Espaçamento entre Seções",
        "default": 0
      }
    ]
  },
  {
    "name": "Tipografia",
    "settings": [
      {
        "type": "header",
        "content": "Títulos"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Fonte",
        "info": "A seleção de uma fonte diferente pode afetar a velocidade da loja. As fontes padrão da Shopify só exibem peso 400 ou 700. Caso queira mais pesos de fontes, necessitará incluir uma fonte custom."
      },
      {
        "type": "header",
        "content": "Corpo"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Fonte",
        "info": "A seleção de uma fonte diferente pode afetar a velocidade da loja. As fontes padrão da Shopify só exibem peso 400 ou 700. Caso queira mais pesos de fontes, necessitará incluir uma fonte custom."
      },
      {
        "type": "header",
        "content": "Fonte Customizada Títulos",
        "info": "Caso as fontes padrão não sejam suficiente, pode adicionar um link para uma fonte google por exemplo. Esse campo é prioridade, se estiver preenchido, sobrescreverá a fonte padrão. Caso não queira, remova todos os campos"
      },
      {
        "type": "text",
        "id": "custom_font_head_name",
        "label": "Nome da Fonte Custom",
        "default": "Work Sans"
      },
      {
        "type": "textarea",
        "id": "custom_font_head",
        "label": "URL",
        "default": "<link href='https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap' rel='stylesheet'>",
      },
      {
        "type": "header",
        "content": "Fonte Customizada Corpo",
        "info": "Caso as fontes padrão não sejam suficiente, pode adicionar um link para uma fonte google por exemplo. Esse campo é prioridade, se estiver preenchido, sobrescreverá a fonte padrão. Caso não queira, remova todos os campos",
      },
      {
        "type": "text",
        "id": "custom_font_body_name",
        "label": "Nome da Fonte Custom",
        "default": "Work Sans"
      },
      {
        "type": "textarea",
        "id": "custom_font_body",
        "label": "URL",
        "default": "<link href='https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap' rel='stylesheet'>",
      },
    ]
  },
  {
    "name": "Redes Sociais",
    "settings": [
      {
        "type": "header",
        "content": "Contas de redes sociais"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "placeholder": "https://facebook.com/shopify"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "placeholder": "https://instagram.com/shopify"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube",
        "placeholder": "https://www.youtube.com/shopify"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "Tiktok",
        "placeholder": "https://tiktok.com/@shopify"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "X / Twitter",
        "placeholder": "https://x.com/shopify"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat",
        "placeholder": "https://www.snapchat.com/add/shopify"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "placeholder": "https://pinterest.com/shopify"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr",
        "placeholder": "https://shopify.tumblr.com"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo",
        "placeholder": "https://vimeo.com/shopify"
      }
    ]
  },
]
