<announcement-bar
  data-section-id="{{ section.id }}"
  data-direction="{{ section.settings.direction }}"
  data-duration="{{ section.settings.duration }}"
  data-gap="{{ section.settings.gap }}"
  data-pauseHover="{{ section.settings.pause_hover }}"
  style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};"
  class="w-full overflow-hidden py-1 lg:py-2 flex"
>
  <div class="announcement-content flex flex-nowrap whitespace-nowrap announcement-inner items-center">
    {%- for block in section.blocks -%}
      <div class="inline-block px-2 text-xs lg:text-base">
        {{ block.settings.text_item }}
      </div>
      <span class="inline-block px-2">•</span>
    {%- endfor -%}
  </div>
</announcement-bar>

{% schema %}
{
  "name": "Barra de Anuncios",
  "max_blocks": 15,
  "settings": [
    {
      "type": "range",
      "id": "duration",
      "label": "Duração do ciclo",
      "unit": "s",
      "default": 40,
      "min": 10,
      "max": 60,
      "step": 1
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap entre conteúdos (px)",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direção",
      "default": "left",
      "options": [
        { "value": "left", "label": "Esquerda" },
        { "value": "right", "label": "Direita" },
      ]
    },
    {
      "type": "checkbox",
      "id": "pause_hover",
      "label": "Pausar ao passar o mouse?",
      "default": false
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Cor de fundo",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Cor do texto",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Texto",
      "settings": [
        {
          "type": "richtext",
          "id": "text_item",
          "label": "Texto do anúncio",
          "default": "<p>Em até <strong>12x sem juros!</strong></p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Barra de Anuncios",
      "blocks": []
    }
  ]
}
{% endschema %}
