{%- comment -%}
  Seção de Depoimentos de Clientes / Testimonials
  Usa o componente my-slider para carrossel
{%- endcomment -%}

{%- liquid
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign autoplay = section.settings.autoplay
  assign autoplay_speed = section.settings.autoplay_speed
  assign show_navigation = section.settings.show_navigation
-%}

{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<section
  class="testimonials-section color-{{ section.settings.color_scheme }} color-background color-text py-16 md:py-20 overflow-hidden"
>
  <div class="container mx-auto px-4 md:px-6 lg:px-8">

    {%- comment -%} Header {%- endcomment -%}
    {% if heading != blank or subheading != blank %}
      <div class="text-center mb-8">
        {% if heading != blank %}
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {{ heading }}
          </h2>
        {% endif %}

        {% if subheading != blank %}
          <p class="text-lg opacity-80 max-w-2xl mx-auto">
            {{ subheading }}
          </p>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} Slider de Depoimentos {%- endcomment -%}
    {% if section.blocks.size > 0 %}
      <div class="relative">
        <my-slider
          class="testimonials-slider"
          data-section-id="{{ section.id }}"
          data-items="{{ section.blocks.size }}"
          data-loop="true"
          data-dot="true"
          data-autoplay="{{ autoplay }}"
          data-pause-hover="true"
          data-ap-time="{{ autoplay_speed }}"
          data-qty-desk="3"
          data-qty-tab="2"
          data-qty-mob="1"
        >
          <div class="my-slider__container overflow-hidden py-6">
            {% for block in section.blocks %}
              {% if block.type == 'testimonial' %}
                <div class="item px-4" {{ block.shopify_attributes }}>
                  {% render 'testimonial-card',
                    block: block,
                    card_color_scheme: section.settings.card_color_scheme
                  %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </my-slider>

        {%- comment -%} Setas de Navegação {%- endcomment -%}
        {% if show_navigation %}
          <div class="hidden md:block">
            <button
              type="button"
              class="testimonials-nav testimonials-nav--prev color-button color-border border"
              onclick="sliderPrev('{{ section.id }}')"
              aria-label="{{ 'general.accessibility.previous' | t }}"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>

            <button
              type="button"
              class="testimonials-nav testimonials-nav--next color-border color-button border"
              onclick="sliderNext('{{ section.id }}')"
              aria-label="{{ 'general.accessibility.next' | t }}"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>

    {% else %}
      {%- comment -%} Estado vazio {%- endcomment -%}
      <div class="text-center py-12 opacity-60">
        <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <p class="text-lg">{{ 'testimonials.empty_state' | t }}</p>
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "section-testimonials",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.testimonials.settings.color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "t:sections.testimonials.settings.card_color_scheme.label",
      "default": "scheme-2",
      "info": "t:sections.testimonials.settings.card_color_scheme.info"
    },
    {
      "type": "header",
      "content": "t:sections.testimonials.settings.heading.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.testimonials.settings.heading.label",
      "default": "What our customers say"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "t:sections.testimonials.settings.subheading.label",
      "default": "Check out the experience of those who have already purchased from us"
    },
    {
      "type": "header",
      "content": "t:sections.testimonials.settings.slider_settings.content"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "t:sections.testimonials.settings.autoplay.label",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "label": "t:sections.testimonials.settings.autoplay_speed.label",
      "min": 3,
      "max": 10,
      "step": 1,
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "t:sections.testimonials.settings.show_navigation.label",
      "default": true,
      "info": "t:sections.testimonials.settings.show_navigation.info"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "t:sections.testimonials.blocks.testimonial.name",
      "settings": [
        {
          "type": "header",
          "content": "t:sections.testimonials.blocks.testimonial.settings.customer_header.content"
        },
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "t:sections.testimonials.blocks.testimonial.settings.customer_image.label",
          "info": "t:sections.testimonials.blocks.testimonial.settings.customer_image.info"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "t:sections.testimonials.blocks.testimonial.settings.customer_name.label",
          "default": "Sarah Johnson"
        },
        {
          "type": "text",
          "id": "customer_location",
          "label": "t:sections.testimonials.blocks.testimonial.settings.customer_location.label",
          "default": "New York, NY",
          "info": "t:sections.testimonials.blocks.testimonial.settings.customer_location.info"
        },
        {
          "type": "header",
          "content": "t:sections.testimonials.blocks.testimonial.settings.review_header.content"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "t:sections.testimonials.blocks.testimonial.settings.rating.label",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "t:sections.testimonials.blocks.testimonial.settings.testimonial_text.label",
          "default": "I loved the quality of the dresses! The fabric is excellent and the fit is perfect. I will definitely buy again.",
          "info": "t:sections.testimonials.blocks.testimonial.settings.testimonial_text.info"
        },
        {
          "type": "text",
          "id": "product_purchased",
          "label": "t:sections.testimonials.blocks.testimonial.settings.product_purchased.label",
          "info": "t:sections.testimonials.blocks.testimonial.settings.product_purchased.info",
          "placeholder": "t:sections.testimonials.blocks.testimonial.settings.product_purchased.placeholder"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.presets.name",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "customer_name": "Sarah Johnson",
            "customer_location": "New York, NY",
            "rating": 5,
            "testimonial_text": "I loved the quality of the dresses! The fabric is excellent and the fit is perfect. I will definitely buy again.",
            "product_purchased": "Floral Midi Dress"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "customer_name": "Emily Martinez",
            "customer_location": "Los Angeles, CA",
            "rating": 5,
            "testimonial_text": "Impeccable service and fast delivery. The dress arrived exactly as in the photo. Highly recommend!",
            "product_purchased": "Evening Maxi Dress"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "customer_name": "Jessica Williams",
            "customer_location": "Miami, FL",
            "rating": 5,
            "testimonial_text": "This is my third purchase and I'm always impressed by the quality. The pieces are beautiful and elegant!",
            "product_purchased": "Blazer Set"
          }
        }
      ]
    }
  ]
}
{% endschema %}
