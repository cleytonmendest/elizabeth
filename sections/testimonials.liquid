      "info": "Setas aparecem apenas em desktop"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Depoimento",
      "settings": [
        {
          "type": "header",
          "content": "Cliente"
        },
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Foto do Cliente",
          "info": "Opcional - usar imagem quadrada para melhor resultado"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "Nome do Cliente",
          "default": "Maria Silva"
        },
        {
          "type": "text",
          "id": "customer_location",
          "label": "Cidade/Estado",
          "default": "São Paulo, SP",
          "info": "Opcional"
        },
        {
          "type": "header",
          "content": "Avaliação"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Número de Estrelas",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "testimonial_text",
          "label": "Texto do Depoimento",
          "default": "Adorei a qualidade dos vestidos! O tecido é excelente e o caimento perfeito. Com certeza voltarei a comprar.",
          "info": "Recomendado: 100-200 caracteres"
        },
        {
          "type": "text",
          "id": "product_purchased",
          "label": "Produto Comprado",
          "info": "Opcional - ex: 'Vestido Floral Midi'",
          "placeholder": "Nome do produto"
        }
      ]
    }
  ],
