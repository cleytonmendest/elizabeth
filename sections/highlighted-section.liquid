<section class="page-width flex">
  {% for block in section.blocks %}
    {% if block.type == 'image' %}
      <div class="flex-1">
        {% if section.settings.url != blank %}
          <a href="{{ section.settings.url }}">
            {{ block.settings.image | image_url: width: 1500 | image_tag }}
          </a>
          {% else %}
            {{ block.settings.image | image_url: width: 1500 | image_tag }}
        {% endif %}
      </div>
    {% elsif block.type == 'text' %}
      <div class="flex-1 flex items-center justify-center">
        <div class="max-w-xl">
          <h2 class="text-sm text-black lg:text-2xl">{{ block.settings.pre_title }}</h2>
          <h3 class="text-black text-2xl lg:text-4xl mb-4 lg:mb-6">{{ block.settings.title }}</h3>
          <p class="text-sm text-black">{{ block.settings.text }}</p>
          {% if section.settings.url != blank %}
            <a href="{{ section.settings.url }}">
              {% render 'icon-arrow-right', size: 54 %}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endfor %}
</section>

{% schema %}
{
  "name": "Seção Destaque",
  "settings": [
    {
      "type": "url",
      "id": "url",
      "label": "URL de Redirecionamento"
    }
  ],
  "max_blocks": 2,
  "blocks": [
    {
      "name": "Imagem",
      "type": "image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagem"
        }
      ]
    },
    {
      "name": "Texto",
      "type": "text",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "pre_title",
          "label": "Pré título"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Seção Destaque",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
