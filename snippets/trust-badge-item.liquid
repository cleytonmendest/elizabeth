{%- comment -%}
  Componente individual de Trust Badge

  Parâmetros:
  - block: bloco com configurações (obrigatório)
  - compact: layout compacto horizontal (opcional, default: false)
{%- endcomment -%}

{%- liquid
  assign icon = block.settings.icon | default: 'check-circle'
  assign title = block.settings.title
  assign description = block.settings.description
  assign compact = compact | default: false
-%}

{% if compact %}
  {%- comment -%} Layout Compacto (horizontal) {%- endcomment -%}
  <div class="flex items-center gap-2">
    <div class="flex-shrink-0 color-icon">
      {% render 'trust-badge-icon', icon: icon, size: 20 %}
    </div>
    <div class="text-left">
      {% if title != blank %}
        <p class="font-semibold text-sm leading-tight color-text">
          {{ title }}
        </p>
      {% endif %}
      {% if description != blank %}
        <p class="text-xs color-text-muted">
          {{ description }}
        </p>
      {% endif %}
    </div>
  </div>

{% else %}
  {%- comment -%} Layout Padrão (vertical/centralizado) {%- endcomment -%}
  <div class="flex flex-col items-center gap-2">
    <div class="flex-shrink-0 color-icon">
      {% render 'trust-badge-icon', icon: icon, size: 32 %}
    </div>
    <div class="text-center">
      {% if title != blank %}
        <p class="font-semibold text-sm md:text-base leading-tight color-text">
          {{ title }}
        </p>
      {% endif %}
      {% if description != blank %}
        <p class="text-xs md:text-sm color-text-muted mt-1">
          {{ description }}
        </p>
      {% endif %}
    </div>
  </div>
{% endif %}
