{{ 'cart.css' | asset_url | stylesheet_tag }}
<script src="{{ 'cart.js' | asset_url }}" defer></script>

<cart-drawer class="cart-drawer fixed z-50 left-0 top-0 w-screen h-full flex justify-end bg-[#12121280]">
  <div class="cart-drawer">
    <div class="cart-inner pb-10 h-full w-full sm:w-[385px] bg-white z-10 relative">
      <div class="cart-header flex h-16 shadow-lg px-4 items-center">
        <span class="flex-1 flex items-center justify-center font-bold text-lg">Carrinho</span>
        <button
          class="w-5 hover:opacity-70 transition-opacity"
          type="button"
          onclick="this.closest('cart-drawer').close()"
          aria-label="Fechar carrinho"
        >
          {% render 'icon-close' %}
        </button>
      </div>

      <div id="cart-empty" class="h-full {% if cart == empty %}flex{% else %}hidden{% endif %} items-center justify-center flex-col">
        <h3 class="text-2xl font-bold">Carrinho Vazio</h3>
        <p class="text-base text-gray-700">Seu carrinho est√° vazio :(</p>
      </div>

      <div id="cart-container" class="{% if cart == empty %}hidden{% else %}flex{% endif %} flex-col h-full">
        <div class="flex flex-col flex-1 overflow-y-auto" id="cart-items-container">
          {% for item in cart.items %}
            {% render 'cart-drawer-item', item: item %}
          {% endfor %}
        </div>
        <div class="p-4 shadow-[0_0_12px_rgba(0,0,0,0.15)]">
          <div id="cart-summary-total" class="summary flex flex-col gap-2 mb-4">
            <div class="flex justify-between text-sm">
              <div class="text-gray-600">Subtotal:</div>
              <div class="subtotal font-medium">
                {{ cart.items_subtotal_price | money }}
              </div>
            </div>
            {% if cart.total_discount > 0 %}
              <div class="flex justify-between text-sm">
                <div class="text-gray-600">Descontos:</div>
                <div class="discounts font-medium text-green-600">
                  -{{ cart.total_discount | money }}
                </div>
              </div>
            {% endif %}
            <div class="flex justify-between pt-2 border-t border-gray-200">
              <div class="font-semibold">Total:</div>
              <div class="total-price font-bold text-lg">
                {{ cart.total_price | money }}
              </div>
            </div>
          </div>
          <button
            class="w-full h-10 flex items-center justify-center border border-orange-500 mt-4 text-orange-500 font-bold hover:bg-orange-50 transition-colors rounded"
            type="button"
            onclick="this.closest('cart-drawer').close()"
          >
            CONTINUAR COMPRANDO
          </button>
          <a
            href="/checkout"
            class="flex cursor-pointer h-10 w-full items-center justify-center mt-4 bg-orange-500 text-white font-bold hover:bg-orange-600 transition-colors rounded"
            >FINALIZAR PEDIDO</a
          >
        </div>
      </div>
    </div>
    <div id="minicart-overlay" class="fixed top-0 left-0 right-0 bottom-0"></div>
  </div>
</cart-drawer>
