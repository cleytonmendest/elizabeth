{%- liquid
  assign variants_json = product.variants | json

  assign current_variant = product.selected_or_first_available_variant
-%}

{{ 'variant-selector.css' | asset_url | stylesheet_tag }}

{%- unless product.has_only_default_variant -%}
  <variant-selects
    id="variant-selects-{{ section.id }}"
    data-section="{{ section.id }}"
    data-url="{{ product.url }}"
    data-url="{{ product.url }}?variant={{ current_variant.id }}"
    class="flex flex-col gap-5 my-6"
  >
    {%- for option in product.options_with_values -%}
      {%- liquid
        assign swatch_count = option.values | map: 'swatch' | compact | size
        assign picker_type = block.settings.picker_type

        if swatch_count > 0 and block.settings.swatch_shape != 'none'
          if block.settings.picker_type == 'dropdown'
            assign picker_type = 'swatch_dropdown'
          else
            assign picker_type = 'swatch'
          endif
        endif
      -%}

      <div>
        <fieldset>
          <legend class="mb-3 text-sm">
            <span class="text-gray-700">{{ option.name }}:</span>
            <span class="variant-selected-value ml-1" data-selected-swatch-value="{{ option.name }}">
              {{- option.selected_value -}}
            </span>
          </legend>
          {% render 'product-variant-options',
            product: product,
            option: option,
            block: block,
            picker_type: picker_type
          %}
        </fieldset>
      </div>
    {%- endfor -%}
    <script type="application/json" data-variants>
      {{ product.variants | json }}
    </script>
  </variant-selects>
{%- endunless -%}
