<div class="flex">
  <div>
    {% if item.image %}
      <a href="{{ item.url }}" class="">
        <img
          class="cart-item__image"
          src="{{ item.image | image_url: width: 200 }}"
          alt="{{ item.image.alt | escape }}"
          loading="lazy"
          width="100"
          height="{{ 100 | divided_by: item.image.aspect_ratio | ceil }}"
        >
      </a>
    {% endif %}
  </div>
  <div class="flex-[1]">
    <small class="uppercase text-xs text-gray-700">{{ item.vendor }}</small>
    <div class="flex gap-5">
      <a href="{{ item.url }}" class="flex-1">
        <h3>{{ item.title }}</h3>
      </a>
      <remove-from-cart
        class="cursor-pointer w-6 h-6 flex items-center justify-center"
        data-index="{{ item.index | plus: 1 }}"
      >
        {% render 'icon-trash' %}
      </remove-from-cart>
    </div>
    <div class="flex">
      <quantity-input class="border border-slate-900 rounded-2xl flex">
        <input class="m-2" type="number">
        <div class="flex flex-col">
          <button>+</button>
          <button>-</button>
        </div>
      </quantity-input>
    </div>
  </div>
</div>
