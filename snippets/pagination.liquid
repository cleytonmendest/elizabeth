{%- if paginate.pages > 1 -%}
  <nav class="pagination flex items-center justify-center gap-2" role="navigation" aria-label="Paginação">
    {%- if paginate.previous -%}
      <a
        href="{{ paginate.previous.url }}"
        class="pagination__item pagination__item--prev inline-flex items-center justify-center w-10 h-10 border border-gray-300 rounded hover:bg-gray-100 transition-colors"
        aria-label="Página anterior"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </a>
    {%- else -%}
      <span class="pagination__item pagination__item--prev inline-flex items-center justify-center w-10 h-10 border border-gray-200 rounded text-gray-300 cursor-not-allowed" aria-disabled="true">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </span>
    {%- endif -%}

    {%- for part in paginate.parts -%}
      {%- if part.is_link -%}
        <a
          href="{{ part.url }}"
          class="pagination__item inline-flex items-center justify-center w-10 h-10 border border-gray-300 rounded hover:bg-gray-100 transition-colors"
          aria-label="Página {{ part.title }}"
        >
          {{ part.title }}
        </a>
      {%- else -%}
        {%- if part.title == paginate.current_page -%}
          <span
            class="pagination__item pagination__item--current inline-flex items-center justify-center w-10 h-10 border-2 border-black bg-black text-white rounded font-semibold"
            aria-current="page"
            aria-label="Página {{ part.title }}"
          >
            {{ part.title }}
          </span>
        {%- else -%}
          <span class="pagination__item inline-flex items-center justify-center w-10 h-10">
            {{ part.title }}
          </span>
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if paginate.next -%}
      <a
        href="{{ paginate.next.url }}"
        class="pagination__item pagination__item--next inline-flex items-center justify-center w-10 h-10 border border-gray-300 rounded hover:bg-gray-100 transition-colors"
        aria-label="Próxima página"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    {%- else -%}
      <span class="pagination__item pagination__item--next inline-flex items-center justify-center w-10 h-10 border border-gray-200 rounded text-gray-300 cursor-not-allowed" aria-disabled="true">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </span>
    {%- endif -%}
  </nav>
{%- endif -%}
